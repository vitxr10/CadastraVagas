@model VagaModel
@{
}
    <div>
        <h1 class="text-center">Editar vaga</h1>
    </div>


    <form class="container" asp-controller="Vaga" asp-action="Editar" method="post">
        <div class="row">
            <div class="col mb-3">
                <label for="tituloVaga" class="form-label">Título:</label>
                <input type="text" class="form-control" asp-for="Titulo" placeholder="Ex: Analista de dados" required>
            </div>
            <div class="col mb-3">
                <label for="empresa" class="form-label">Empresa:</label>
                <input type="text" class="form-control" asp-for="Empresa" required>
            </div>
        </div>

        <div class="mb-3">
            <label for="descricaoVaga">Descrição da vaga:</label>
            <textarea class="form-control" placeholder="Descreva os requisitos da vaga aqui" asp-for="Descricao"></textarea>
        </div>
        <div class="row">
            <div class="col mb-3">
                <label for="link" class="form-label">Link:</label>
                <input type="text" class="form-control" asp-for="Link">
            </div>
            <div class="col mb-3">
                <label for="situacaoVaga" class="form-label">Situação:</label>
                <select class="form-select">
                    <option value="" selected>Selecione a situação da vaga</option>
                    <option value="1">Análise de currículo</option>
                    <option value="2">Fit cultural</option>
                    <option value="3">Dinâmica</option>
                    <option value="4">Entrevista</option>
                    <option value="5">Teste</option>
                    <option value="6">Final</option>
                </select>
            </div>
        </div>
        <div class="mb-3">
            <label for="modalidade">Modalidade:</label>
            <select class="form-select">
                <option value="" selected>Selecione a modalidade</option>
                <option value="1">Presencial</option>
                <option value="2">Híbrido</option>
                <option value="3">Remoto</option>
            </select>
        </div>
        <div class="mb-3">
            <ul class="list-group list-unstyled">
                <li class="">
                    <input name="resultado" type="radio" value="1" asp-for="Aprovado">
                    <label class="" for="aprovado">Aprovado</label>
                </li>
                <li class="">
                    <input name="resultado" type="radio" value="0" asp-for="Aprovado">
                    <label class="" for="reprovado">Reprovado</label>
                </li>
            </ul>
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a class="btn btn-secondary" asp-controller="ListaVagas" asp-action="Index">Voltar</a>
    </form>


