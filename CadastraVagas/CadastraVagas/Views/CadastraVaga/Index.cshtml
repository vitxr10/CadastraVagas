@{
    <div>
        <h1 class="text-center">Cadastrar nova vaga</h1>
    </div>

    <div>
        <form class="container">
            <div class="row">
                <div class="col mb-3">
                    <label for="tituloVaga" class="form-label">Título:</label>
                    <input type="text" class="form-control" id="tituloVaga" placeholder="Ex: Analista de dados" required>
                </div>
                <div class="col mb-3">
                    <label for="empresa" class="form-label">Empresa:</label>
                    <input type="text" class="form-control" id="empresa" required>
                </div>
            </div>

            <div class="mb-3">
                <label for="descricaoVaga">Descrição da vaga:</label>
                <textarea class="form-control" placeholder="Descreva os requisitos da vaga aqui" id="descricaoVaga"></textarea>
            </div>
            <div class="row">
                <div class="col mb-3">
                    <label for="link" class="form-label">Link:</label>
                    <input type="text" class="form-control" id="link">
                </div>
                <div class="col mb-3">
                    <label for="situacaoVaga" class="form-label">Situação:</label>
                    <select class="form-select" required>
                        <option value="" selected>Selecione a situação da vaga</option>
                        <option value="1">Análise de currículo</option>
                        <option value="2">Fit cultural</option>
                        <option value="3">Dinâmica</option>
                        <option value="4">Entrevista</option>
                        <option value="5">Teste</option>
                        <option value="6">Final</option>
                    </select>
                </div>
            </div>
            <div class="mb-3">
                <label for="modalidade">Modalidade:</label>
                <select class="form-select" required>
                    <option value="" selected>Selecione a modalidade</option>
                    <option value="1">Presencial</option>
                    <option value="2">Híbrido</option>
                    <option value="3">Remoto</option>
                </select>
            </div>
            <div class="mb-3">
                <ul class="list-group list-unstyled">
                    <li class="">
                        <input name="resultado" type="radio" value="1" id="firstCheckbox">
                        <label class="" for="aprovado">Aprovado</label>
                    </li>
                    <li class="">
                        <input name="resultado" type="radio" value="0" id="secondCheckbox">
                        <label class="" for="reprovado">Reprovado</label>
                    </li>
                </ul>
            </div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </form>
    </div>
}
